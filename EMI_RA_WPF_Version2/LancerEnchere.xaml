<Page x:Class="EMI_RA_WPF.LancerEnchere"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EMI_RA_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LancerEnchere" Height="450" Width="800">

    <Grid>
        <Button Content="Lancer l'enchere" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Margin="367,290,0,0"/>
        <StackPanel Margin="12,64,-12,-92">
            <Calendar x:Name="OuvertureEnchere" SelectionMode = "SingleRange" 
             IsTodayHighlighted = "true" DisplayDate = "1/1/2022" SelectedDatesChanged = "Calendar_SelectedDatesChanged" Height="172"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="234,32,0,0" TextWrapping="Wrap" 
                   Text="Selectionnez la période d'enchere" VerticalAlignment="Top"
                   FontSize="24"/>
    </Grid>
</Page>
